{
  "devDependencies": {
    "@driver-digital/vite-plugin-shopify-clean": "^1.0.3",
    "@tailwindcss/vite": "^4.1.18",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vite-plugin-shopify": "^4.1.1"
  },
  "type": "module",
  "scripts": {
    "dev": "run-p -sr \"shopify:dev -- {@}\" \"vite:dev\" --",
    "deploy": "run-s \"vite:build\" \"shopify:push -- {@}\" --",
    "shopify:dev": "shopify theme dev --path theme --store dawn-original",
    "shopify:push": "shopify theme push --path theme --store dawn-original",
    "vite:dev": "vite",
    "vite:build": "vite build"
  }
}
